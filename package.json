{
  "name": "pomopi",
  "version": "1.0.0",
  "description": "Pomodoro timer for a Raspberry Pi",
  "main": "index.js",
  "dependencies": {
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-free": "^5.9.0",
    "browserify": "^16.2.3",
    "bootstrap": "^4.3.1",
    "jquery": "^3.4.1",
    "popper.js": "^1.15.0"
  },
  "scripts": {
    "mkdirs": "mkdir -p vendor/js vendor/css",
    "install_bs": "cp node_modules/bootstrap/dist/css/bootstrap.min.css vendor/css/bootstrap.min.css; cp node_modules/bootstrap/dist/js/bootstrap.min.js vendor/js/bootstrap.min.js;",
    "install_bs_dep": "cp node_modules/jquery/dist/jquery.slim.min.js vendor/js/jquery.slim.min.js;cp node_modules/popper.js/dist/umd/popper.min.js vendor/js/popper.min.js",
    "install_fa": "cp node_modules/@fortawesome/fontawesome-free/css/all.min.css vendor/css/fa.min.css; cp -r node_modules/@fortawesome/fontawesome-free/webfonts vendor/webfonts",
    "buildOnce": "npm run mkdirs;npm run install_fa;npm run install_bs;npm run install_bs_dep;npm run build",
    "build": "browserify dev/main.js -o js/bundle.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thfield/pomopi.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thfield/pomopi/issues"
  },
  "homepage": "https://github.com/thfield/pomopi#readme"
}
